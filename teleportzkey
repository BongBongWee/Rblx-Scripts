local R=game:GetService("RunService");local L=game:GetService("LogService");local P=game:GetService("Players").LocalPlayer;local teleportKey=Enum.KeyCode.Z;local teleportConnection,messageConnection=nil,nil;local running=true;local function teleportToMouse()local Mouse=P:GetMouse();local Character=P.Character or P.CharacterAdded:Wait();local HumanoidRootPart=Character:WaitForChild("HumanoidRootPart");if Mouse.Hit then HumanoidRootPart.CFrame=CFrame.new(Mouse.Hit.Position+Vector3.new(0,3,0))end end;teleportConnection=game:GetService("UserInputService").InputBegan:Connect(function(input,gameProcessed)if running and input.KeyCode==teleportKey then teleportToMouse()end end);messageConnection=L.MessageOut:Connect(function(message)if message=="stopteleportmotion"then if teleportConnection then teleportConnection:Disconnect()end;if messageConnection then messageConnection:Disconnect()end;running=false;print("[Teleport] Stopped.")end end)
